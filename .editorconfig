# =============================================================================
# Safe Let Stays - Editor Configuration
# =============================================================================
# https://editorconfig.org
# =============================================================================

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Python files
[*.py]
indent_size = 4
max_line_length = 120

# JavaScript files
[*.js]
indent_size = 2

# CSS files
[*.css]
indent_size = 2

# HTML/Django templates
[*.html]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.yml]
[*.yaml]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# Makefile (requires tabs)
[Makefile]
indent_style = tab

# Shell scripts
[*.sh]
indent_size = 2

# Configuration files
[*.ini]
[*.cfg]
indent_size = 4

# Environment files
[.env*]
indent_size = 4
